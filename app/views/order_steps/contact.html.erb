<%= form_for @order, url: wizard_path do |f| %>
  <h2>Tell us a little about yourself</h2>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name%>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email%>
  </div>
  <div class="field">
    <%= f.label :number %><br />
    <%= f.text_field :number%>
  </div>
  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_field :message%>
  </div>


  <div class="actions">
        <%= f.submit "Continue" %>
  </div>
<% end %>