
<div class="col-1-1 center">
  <h2>Update your profile</h2>
</div>
<div class="col-1-1">
  <%= form_for(@user) do |f| %>

    <%= f.label :name %><br/>
    <%= f.text_field :name %><br/><br/>

    <%= f.label :email %><br/>
    <%= f.text_field :email %><br/><br/>

    <%= f.label :number, "Phone Number" %><br/>
    <%= f.text_field :number %><br/><br/>

    <%= f.label :address %><br/>
    <%= f.text_field :address %><br/><br/>

    <%= f.label :password %><br/>
    <%= f.password_field :password %><br/><br/>

    <%= f.label :password_confirmation, "Confirm Password" %><br/>
    <%= f.password_field :password_confirmation %><br/><br/>

    <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
  <% end %>
</div>