<h1>Tell us about your room</h1>

<%= form_for @order do |f| %>

  <div class="field">
    <%= f.label :rooms %><br />
    <%= f.select :rooms, options_for_select([["One", "1"], ["Two", "2"]]) %>
  </div>
  <div class="field">
    <%= f.label :bathroom %><br />
    <%= f.select :bathroom, options_for_select([["One", "1"], ["Two", "2"]]) %>
  </div>
  <div class="field">
    <%= f.label :cleanduration %><br />
    <%= f.text_field :cleanduration %>
  </div>

  <div class="actions">
    <%= f.submit "Next" %>
  </div>  
<% end %>